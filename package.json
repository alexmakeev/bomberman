{
  "name": "bomberman-multiplayer",
  "version": "1.0.0",
  "description": "Cooperative multiplayer Bomberman game with real-time WebSocket communication",
  "main": "dist/server.js",
  "scripts": {
    "dev": "./scripts/start-dev.sh start full",
    "dev:server": "nodemon --exec ts-node src/server-minimal.ts",
    "dev:client": "vite dev",
    "dev:front": "./scripts/start-dev.sh start front",
    "dev:back": "./scripts/start-dev.sh start back", 
    "dev:full": "./scripts/start-dev.sh start full",
    "dev:stop": "./scripts/start-dev.sh stop full",
    "dev:status": "./scripts/start-dev.sh status",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.build.json",
    "build:client": "vite build",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "./scripts/test-ui.sh",
    "test:ui:interactive": "./scripts/test-ui.sh --interactive",
    "test:playwright": "./scripts/test-playwright.sh",
    "test:integration": "./scripts/test-integration.sh all",
    "test:integration:gamer": "./scripts/test-integration.sh gamer",
    "test:integration:admin": "./scripts/test-integration.sh admin",
    "test:integration:system": "./scripts/test-integration.sh system",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "typecheck": "tsc --noEmit && vue-tsc --noEmit",
    "inspect:frontend": "node scripts/inspect-frontend.js",
    "docker:build": "docker build -t bomberman-app .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "db:migrate": "node dist/database/migrate.js",
    "db:seed": "node dist/database/seed.js",
    "prepare": "husky install"
  },
  "keywords": [
    "bomberman",
    "multiplayer",
    "websocket",
    "vue",
    "typescript",
    "cooperative",
    "real-time",
    "game"
  ],
  "author": "Alexander Makeev <alexander.v.makeev@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "dotenv": "^17.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-cors": "^0.0.16",
    "koa-helmet": "^7.0.2",
    "koa-logger": "^3.2.1",
    "koa-mount": "^4.0.0",
    "koa-router": "^12.0.0",
    "koa-static": "^5.0.0",
    "pg": "^8.16.3",
    "rate-limiter-flexible": "^2.4.2",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^9.0.0",
    "winston": "^3.9.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@pinia/testing": "^1.0.2",
    "@playwright/test": "^1.55.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/koa": "^2.13.8",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-cors": "^0.0.2",
    "@types/koa-logger": "^3.1.2",
    "@types/koa-mount": "^4.0.2",
    "@types/koa-router": "^7.4.4",
    "@types/koa-static": "^4.0.2",
    "@types/node": "^20.4.2",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^9.0.2",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-plugin-vue": "^9.15.1",
    "happy-dom": "^18.0.1",
    "husky": "^8.0.3",
    "jsdom": "^26.1.0",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "pinia": "^2.1.4",
    "playwright": "^1.55.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.4",
    "vitest": "^0.33.0",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "vue-tsc": "^1.8.6"
  },
  "lint-staged": {
    "*.{ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alexmakeev/bomberman.git"
  },
  "bugs": {
    "url": "https://github.com/alexmakeev/bomberman/issues"
  },
  "homepage": "https://github.com/alexmakeev/bomberman#readme"
}
