# Development Environment Configuration
# Connects local app to containerized PostgreSQL and Redis services
# Ref: docs/architecture/deployment-setup.md, docker-compose.yml, docker-compose.override.yml

# Application Settings
NODE_ENV=development
PORT=8080

# Database Configuration - Containerized PostgreSQL
# Ref: docs/schema/database.md for schema details
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=bomberman_dev
POSTGRES_USER=bomberman_user  
POSTGRES_PASSWORD=bomberman_pass

# Redis Configuration - Containerized Redis
# Ref: docs/architecture/caching-strategy.md for Redis usage patterns
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis_password

# JWT Configuration
JWT_SECRET=your-jwt-secret-change-in-production

# Logging Configuration
DEBUG=bomberman:*
LOG_LEVEL=debug

# CORS Configuration
CORS_ORIGIN=*

# EventBus Configuration - matches UnifiedGameServerImpl defaults
# Ref: docs/architecture/event-system.md for event system design
EVENT_BUS_DEFAULT_TTL=300000
EVENT_BUS_MAX_EVENT_SIZE=65536
EVENT_BUS_ENABLE_PERSISTENCE=false
EVENT_BUS_ENABLE_TRACING=true