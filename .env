# Local Development Environment Configuration
# Connects local app to containerized PostgreSQL and Redis services
# Ref: docs/architecture/deployment-setup.md, docker-compose.yml, docker-compose.override.yml

# Application Configuration
NODE_ENV=development
PORT=8080
LOG_LEVEL=debug
DEBUG=bomberman:*

# Database Configuration - Containerized PostgreSQL
# Ref: docs/schema/database.md for schema details
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=bomberman_dev
POSTGRES_USER=bomberman_user
POSTGRES_PASSWORD=bomberman_pass

# Redis Configuration - Containerized Redis
# Ref: docs/architecture/caching-strategy.md for Redis usage patterns
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis_password

# JWT Configuration
JWT_SECRET=bomberman_dev_jwt_secret_key_32_chars_min
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000
WS_CONNECTION_TIMEOUT=60000

# Game Configuration
GAME_MAX_PLAYERS_PER_ROOM=8
GAME_DEFAULT_RESPAWN_TIME=10
GAME_MAX_BOMBS_PER_PLAYER=5
GAME_BOMB_EXPLOSION_DELAY=3000

# Security Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# Development Only
ENABLE_SWAGGER=true
ENABLE_DEBUG_ROUTES=true
ENABLE_METRICS=true

# EventBus Configuration - matches UnifiedGameServerImpl defaults
# Ref: docs/architecture/event-system.md for event system design
EVENT_BUS_DEFAULT_TTL=300000
EVENT_BUS_MAX_EVENT_SIZE=65536
EVENT_BUS_ENABLE_PERSISTENCE=false
EVENT_BUS_ENABLE_TRACING=true